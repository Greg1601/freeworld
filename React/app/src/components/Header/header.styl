.header
  background-color: black
  display: flex
  justify-content: space-between
  width: 100%
  position: fixed
  top: 0
  z-index: 1
  align-items: center
  @media screen and (max-device-width: 768px)
    background-color: transparent
    position: absolute
    top: 0
  @media screen and (min-device-width: 769px) and (max-device-width: 1024px)
    width: 50%
    margin: 0.5em
  &-title
    color: #FCFAF2
    font-size: 2em
    padding: 0 0.5em
    @media screen and (max-device-width: 768px)
      font-size: 5em
  &-connect
    display: flex
    color: #FCFAF2
    font-size: 1.3em
    display: flex
    h2
      padding: 1em
      @media screen and (max-device-width: 768px)
        font-size: 3em
        padding: 0.5em
    .flex
      padding: 0.6em 1em
      h3
        padding: 0 0.5em
        @media screen and (max-device-width: 768px)
          font-size: 2em
    &-connect
      display: flex
#logout
  display: inline-block
  button
    border: none
    background-color: black
    color: white
    font-size: 1em
    margin-right: 1em
  button:hover
    text-decoration: underline
#profil-button
  color: white
  border-radius: 50%
#profil-button:hover
  background-color: white
  color: black
