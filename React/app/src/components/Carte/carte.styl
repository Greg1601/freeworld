#map
  width: 100%
  height: 50vh
  z-index: 0
  border:  2px solid #5E2E68
  svg
    @media screen and (max-device-width: 768px)
      font-size: 1.5em


.CircularProgress
  position: absolute
  left: 50%

.user-marker
  color: red

.leaflet-popup-content
  div
    @media screen and (max-device-width: 768px)
      width: 10em
      font-size: 2.5em
  button
    @media screen and (max-device-width: 768px)
      font-size: 1em
.leaflet-popup-close-button
  a
    @media screen and (max-device-width: 768px)
      font-size: 4em
      padding: 2em
      right: 20px
