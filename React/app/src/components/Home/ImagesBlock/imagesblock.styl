.ImagesBlock
  display: flex
  justify-content: space-between
  h3
    font-size: 2em
    margin-bottom: 0.5em
    @media screen and (max-device-width: 768px)
      font-size: 5em
      padding: 0.2em
  h4
    font-size: 1.5em
    @media screen and (max-device-width: 768px)
      font-size: 3em
      padding: 0.2em
  p
    font-size: 1em
    @media screen and (max-device-width: 768px)
      font-size: 2em
      padding: 0.2em
  a
    span
      @media screen and (max-device-width: 768px)
        font-size: 2em
        padding: 0.2em
  button
    span
      svg
        @media screen and (max-device-width: 768px)
          font-size: 3em
