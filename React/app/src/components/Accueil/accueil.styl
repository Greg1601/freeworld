#accueil
  position: relative
  background-image: url(/images/main.png)
  background-position: 0 0
  background-repeat: no-repeat
  background-size: cover
  height: 100vh
  @media screen and (max-device-width: 768px)
    background-position: 30%
    width: 100vw
  &-searchBar
    position: absolute
    top: 50%
    left: calc(50% - (50vw/2))
    @media screen and (max-device-width: 768px)
      left: calc(50% - (85vw/2))
    input
      width: 45vw
      height: 8vh
      border-radius: 6px 0 0 6px
      border: none
      font-size: 2em
      padding-left: 1em
      opacity: .9
      @media screen and (max-device-width: 768px)
        width: 70vw
      // @media screen and (max-device-width: 768px)
      //   width: 80vh
    button
      width: 5vw
      height: 8vh
      border: none
      background-color: #5E2E68
      color: white
      border-radius: 0 6px 6px 0
      font-size: 2em
      opacity: .9
      @media screen and (max-device-width: 768px)
        width: 15vw
        opacity: 1
  &-banner
    font-size: 2.5em
    text-align: center
    position: absolute
    height: 8vh
    width: 100%
    color: #FCFAF2
    top: 90vh
    @media screen and (max-device-width: 768px)
      background-color: transparent
      font-size: 5em
      top: 20vh
      font-weight: bold
      width: 100%
      padding: 1em
    p
      margin-bottom: .6em

  &-arrow
    display: none
    font-size: 1.5em
    text-align: center
    position: relative
    top: -0.5em
    @media screen and (max-device-width: 768px)
      display: none
