.infoslieu
  padding-right: 2em
  margin-bottom: 0.5em
  display: flex
  justify-content: space-between
  @media screen and (max-device-width: 768px)
   flex-direction: column
  h4, h5
    font-size: 3em
    color: #5E2E68
    margin: 0.5em auto
    padding-bottom: 0.1em
    @media screen and (max-device-width: 768px)
      font-size: 3.5em
  h4
    text-transform: uppercase;
  h5
    font-size: 1.5em
  p
    color: #484848
    @media screen and (max-device-width: 768px)
      font-size: 2.5em
  div
    margin-bottom: 2em
  &-minimap
    width: 30%

#minimap
  width: 100%
  height: 50vh
  @media screen and (max-device-width: 768px)
    width: 90vw
