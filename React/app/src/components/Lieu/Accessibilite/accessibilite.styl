.accessibilite
  margin: 1em 0
  text-align: center
  width: 65%
  @media screen and (max-device-width: 768px)
    margin: auto
  h5
    font-size: 1.5em
    font-size: 2em
    color: #5E2E68
    margin: 1em auto
    padding-bottom: 1em
    border-bottom: 2px solid #484848
    @media screen and (max-device-width: 768px)
      font-size: 3em
      align-self: flex-start
  &-block
    display: flex
    justify-content: space-around
    &-block
      display: flex
      flex-direction: column
      align-items: center
      @media screen and (max-device-width: 768px)
        margin: 1em
      h6
        margin-top: 0.5em
        text-align: center
        color: #5E2E68
        @media screen and (max-device-width: 768px)
          font-size: 2.5em
    &-off
      opacity: 0.2
  &-icon
    color: #5E2E68
    font-size: 5em
    font-weight: bold
    margin-right: 0 0.5em 0.5em 0
    @media screen and (max-device-width: 768px)
      font-size: 8em
