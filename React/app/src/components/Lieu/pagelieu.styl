.lieu
  margin: 5em auto 1em
  padding: 0.5em
  width: 70%
  h3, h4, h5
    font-size: 1.5em
    font-weight: 500
    color: #5E2E68
  &-info
    display: flex
    justify-content: space-between
    &-block
      display: flex
      flex-direction: column
      justify-content: space-between
      width: 65%
      padding: 1em
      p
        margin: 1em
        color: #484848
      h3
        font-size: 2.6em
    &-infos
      font-size: 1.1em
      padding: 1em
    &-rate
      padding: 1.1em
      font-size: 1.1em
      border-top: 1px solid #5E2E68
      border-bottom: 1px solid #5E2E68
  .pagelieu
    display: flex
    justify-content: space-between
    &-block
      width: 50%
      padding: 2em 0 2em 2em
      display: flex
      flex-direction: column
      align-items: flex-end
      &-signal
        width: 65%
        text-align: center
        border-radius: 0.5em
        margin-top: 3em
        h3
          font-size: 1.5em
          color: #484848
        button
          margin: 1em 0
          border: 1px solid #5E2E68
          border-radius: 0.2em
          color: #5E2E68
          font-size: 2em
        button:hover
          background-color: #5E2E68
          color: white
        &-form
          margin: 2em 0
.title
  font-weight: 500
