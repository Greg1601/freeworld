.commentaires
  align-self: flex-start
  @media screen and (max-device-width: 768px)
    width: 90%
    margin: auto
  h5
    font-size: 1.5em
    color: #5E2E68
  button
    margin: 2em 0 1em
    border: 1px solid #5E2E68
    border-radius: 0.2em
    font-size: 1em
    font-weight: bold
    padding: 1em 1.5em
    color: #5E2E68
    background-color: white
    font-size: 1em
    @media screen and (max-device-width: 768px)
      font-size: 2em
  button:hover
    background-color: #5E2E68
    color: white
