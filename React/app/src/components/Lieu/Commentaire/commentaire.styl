.commentaire
  border-bottom: 0.1em solid #484848
  padding: 1em
  color: #484848
  font-size: 1.2em
  @media screen and (max-device-width: 768px)
    padding: 2.5em 1em
  &-profil
    margin-bottom: 1.5em
  span
    float: right
    color: #5E2E68
    font-weight: bold
    @media screen and (max-device-width: 768px)
      font-size: 1.5em
  h6
    font-size: 1.2em
    font-weight: bold
    margin-bottom: 0.5em
  .date
    @media screen and (max-device-width: 768px)
      font-size: 1.5em
.quote
  color: #5E2E68
  font-size: 2em
  opacity: 0.5
  margin: 0.5em auto
