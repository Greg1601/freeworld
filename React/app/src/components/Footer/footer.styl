footer
  background-image: url(/images/mapblack.jpg)
  color: white
  height: 83vh
  padding: 1em
  #question
    padding: 2em
    margin: 1em 0
    h2
      font-size: 3em
      text-transform: uppercase
    p
      font-size: 1.5em
      opacity: .6
      margin: 1em 0
  form
    display: flex
    flex-wrap: wrap
    justify-content: space-between
    button
      text-align: left
      margin-top: 4em
      padding-bottom: 1em
      width: 12%
      font-size: 1em
      text-transform: capitalize
      margin-right: calc(40% - 11%)
      border: none
      background: none
      color: orange
      border-bottom: 1px solid orange
#mention
  text-align: center
  font-size: 1.4em
  background-color: black
  padding: 2em 0
  color: white
